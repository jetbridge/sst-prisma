{
  "name": "myapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "sst start",
    "fullstack": "pnpm run --recursive -C web dev",
    "watch": "pnpm run tsc:watch",
    "tsc": "tsc -b",
    "tsc:watch": "tsc -b --watch",
    "generate": "pnpm run --recursive generate",
    "postinstall": "pnpm run generate",
    "test": "pnpm testall",
    "test:ci": "pnpm test",
    "testall": "pnpm start:db && pnpm test:backend && pnpm test:web",
    "test:backend": "pnpm start:db && pnpm generate && pnpm run -C backend migrate:test && vitest run",
    "test:web": "pnpm run -C web test",
    "lint": "pnpm run --recursive --aggregate-output lint && pnpm lint:toplevel",
    "lint:toplevel": "eslint --ext .js,.ts,.tsx stacks",
    "lint:fix": "pnpm run lint -- --fix",
    "build": "tsc -b && sst build",
    "build:common": "pnpm run -C common build",
    "build:web": "pnpm run -C web build",
    "deploy": "pnpm generate && pnpm build:common && sst deploy",
    "deploy:main": "pnpm build:common && sst deploy main",
    "deploy:verbose": "sst deploy --verbose",
    "remove": "sst remove",
    "prettier:exc": "./node_modules/.bin/prettier --config .prettierrc.yaml --write",
    "prettier": "pnpm run prettier:exc -- '**/*.{js,ts,tsx,css,json,yaml,yml,md}'",
    "start:db": "docker-compose up -d",
    "stop:db": "docker-compose down",
    "clean": "tsc -b --clean && rm -rf .build .sst dist common/graphql/generated && pnpm run --recursive --if-present clean"
  },
  "dependencies": {
    "@aws-crypto/client-node": "^3.1.1",
    "@aws-lambda-powertools/logger": "^0.8.0",
    "@aws-sdk/client-kms": "~3.145.0",
    "@aws-sdk/client-secrets-manager": "~3.145.0",
    "@serverless-stack/cli": "^1.6.10",
    "@serverless-stack/resources": "^1.6.10",
    "aws-cdk-lib": "2.32.0",
    "base64url": "^3.0.1",
    "common": "workspace:*",
    "desm": "^1.3.0",
    "got": "^12.3.1",
    "jose": "^4.8.3",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.5",
    "@aws-cdk/aws-appsync-alpha": "2.32.0-alpha.0",
    "@serverless-stack/core": "^1.6.10",
    "@serverless-stack/static-site-env": "^1.6.10",
    "@sls-next/lambda-at-edge": "^3.7.0",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/aws-lambda": "^8.10.102",
    "@types/memoizee": "^0.4.7",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "aws-lambda": "^1.0.7",
    "chalk": "^5.0.1",
    "constructs": "^10.1.17",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "fs-extra": "^10.1.0",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2",
    "vite": "^3.0.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.19.1"
  },
  "engines": {
    "node": ">=0.16",
    "npm": ">=7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yaml,yml}": [
      "yamllint"
    ],
    "{*.{ts,js},!(node*)**/*.{ts,tsx,js,jsx}}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "enable-pre-post-scripts": false
  }
}
