{
  "name": "myapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "prisma generate",
    "graphql:generate": "cross-env DEBUG=1 graphql-codegen --config graphql/codegen.yml",
    "generate:all": "npx concurrently -c green.bold,blue.bold npm:db:generate npm:graphql:generate",
    "postinstall": "pnpm run generate:all",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:ci": "pnpm run test",
    "lint": "eslint --ext .js,.ts,.tsx src stacks graphql/documents",
    "lint:fix": "pnpm run lint -- --fix",
    "build": "tsc",
    "start": "pnpm run start:db && AWS_PROFILE=default dotenv -e .env.sst.start sst start",
    "deploy": "AWS_PROFILE=default sst deploy",
    "deploy:main": "AWS_PROFILE=default sst deploy main",
    "remove": "sst remove",
    "prettier:exc": "./node_modules/.bin/prettier --config .prettierrc.yaml --write",
    "prettier": "pnpm run prettier:exc -- '**/*.{js,ts,tsx,css,json,yaml,yml,md}'",
    "format": "pnpm run prettier && prisma format",
    "pretest": "pnpm run start:db && pnpm run migrate:test",
    "migrate": "pnpm run migrate:dev",
    "migrate:dev": "pnpm run format && prisma migrate dev",
    "migrate:test": "dotenv -e .env.jest -- prisma migrate dev --skip-seed --skip-generate",
    "start:db": "docker-compose up -d",
    "stop:db": "docker-compose down"
  },
  "dependencies": {
    "@apollo/client": "^3.6.5",
    "@aws-lambda-powertools/logger": "^0.8.0",
    "@aws-sdk/client-secrets-manager": "^3.67.0",
    "@middy/core": "^2.5.7",
    "@prisma/client": "~3.14.0",
    "@prisma/migrate": "~3.14.0",
    "@prisma/sdk": "~3.14.0",
    "@serverless-stack/cli": "~1.2.5",
    "@serverless-stack/resources": "~1.2.5",
    "aws-cdk-lib": "2.24.0",
    "aws-lambda": "^1.0.7",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@aws-cdk/aws-appsync-alpha": "2.24.0-alpha.0",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@graphql-codegen/typescript-react-apollo": "*",
    "@jest/globals": "^28.1.0",
    "@prisma/generator-helper": "~3.14.0",
    "@serverless-stack/static-site-env": "~1.2.5",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/aws-lambda": "^8.10.70",
    "@types/jest": "^27.5.1",
    "@types/memoizee": "^0.4.7",
    "@types/node": "<15.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chalk": "^5.0.1",
    "concurrently": "^7.2.1",
    "constructs": "^10.1.17",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-esbuild": "^0.2.6",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "prisma": "~3.14.0",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=0.16",
    "npm": ">=7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yaml,yml}": [
      "yamllint"
    ],
    "{*.{ts,js},!(node*)**/*.{ts,tsx,js,jsx}}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
