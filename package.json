{
  "name": "myapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "pnpm build && pnpm run --recursive -w --parallel start",
    "watch": "pnpm run tsc:watch",
    "tsc:watch": "tsc -b --watch",
    "generate": "pnpm run --recursive generate",
    "postinstall": "pnpm run generate",
    "vitest": "vitest",
    "test": "pnpm run vitest",
    "test:ci": "pnpm run test",
    "lint": "pnpm run --recursive --aggregate-output lint && pnpm run lint:toplevel",
    "lint:toplevel": "eslint --ext .js,.ts,.tsx stacks",
    "lint:fix": "pnpm run lint -- --fix",
    "build": "tsc -b && pnpm run --recursive --aggregate-output build",
    "build:common": "pnpm run --filter=common build",
    "predeploy": "pnpm generate && pnpm build:common",
    "deploy": "sst deploy",
    "deploy:main": "pnpm build:common && sst deploy main",
    "remove": "sst remove",
    "prettier:exc": "./node_modules/.bin/prettier --config .prettierrc.yaml --write",
    "prettier": "pnpm run prettier:exc -- '**/*.{js,ts,tsx,css,json,yaml,yml,md}'",
    "clean": "tsc -b --clean && rm -rf .build .sst dist common/graphql/generated && pnpm run --recursive --if-present clean"
  },
  "dependencies": {
    "common": "workspace:*",
    "@aws-lambda-powertools/logger": "^0.8.0",
    "@aws-sdk/client-secrets-manager": "^3.67.0",
    "@serverless-stack/cli": "~1.2.11",
    "@serverless-stack/resources": "~1.2.11",
    "aws-cdk-lib": "2.24.0",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.5",
    "@aws-cdk/aws-appsync-alpha": "2.24.0-alpha.0",
    "@serverless-stack/core": "~1.2.11",
    "@serverless-stack/static-site-env": "~1.2.11",
    "@sls-next/lambda-at-edge": "^3.7.0",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/memoizee": "^0.4.7",
    "@types/node": "<15.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chalk": "^5.0.1",
    "constructs": "^10.1.17",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "fs-extra": "^10.1.0",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.12.9"
  },
  "engines": {
    "node": ">=0.16",
    "npm": ">=7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yaml,yml}": [
      "yamllint"
    ],
    "{*.{ts,js},!(node*)**/*.{ts,tsx,js,jsx}}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "enable-pre-post-scripts": true
  }
}
